<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Øverste del med hvit bakgrunn -->
    <View
            android:id="@+id/topBackground"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="@drawable/top_background_with_stroke"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    <!-- Favorites row -->
    <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrer enheter"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintHorizontal_bias="0.065"/>
    <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="368dp"/>
    <LinearLayout
            android:layout_width="409dp"
            android:layout_height="151dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/headerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:gravity="center">

        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/ic_endrebelysning"
                android:layout_margin="2dp"
                android:contentDescription="Belysning"/>
        <ImageView
                android:layout_width="130dp"
                android:layout_height="128dp"
                android:src="@drawable/ic_endresmarttv"
                android:layout_margin="2dp"
                android:contentDescription="Smart TV"/>

        <ImageView
                android:layout_width="124dp"
                android:layout_height="125dp"
                android:src="@drawable/ic_endrevaskemaskin"
                android:layout_margin="2dp"
                android:contentDescription="Vaskemaskin"/>
    </LinearLayout>

    <!-- Section for Belysning -->

    <!-- Toggle switches for lighting -->

    <!-- Buttons for access control -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/accessTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="0dp"
            android:padding="8dp">


        <!-- Inngangsdør Button -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phillips Hue Go"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"
                    android:textColor="#000000" />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>

        <!-- Bakdør Button -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Samsung Inngangsdør"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"
                    android:textColor="#000000"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>

        <!-- Garasje Button -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Samsung Vaskemaskin"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"
                    android:textColor="#000000" />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>

        <!-- Safe Button -->
        <LinearLayout
                android:id="@+id/safeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="LG Smart TV"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"
                    android:textColor="#000000" />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>


    </LinearLayout>


    <!-- Manage devices button -->

    <View
            android:id="@+id/sectionSeparator2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#242424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="496dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:id="@+id/accessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dine enheter"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="226dp"/>

    <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="45dp"/>

    <ImageView
            android:id="@+id/ic_soketterenheter"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/ic_soketterenheter"
            android:contentDescription="Søk etter enheter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
