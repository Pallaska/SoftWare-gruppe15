<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Øverste del med hvit bakgrunn -->
    <View
            android:id="@+id/topBackground"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:background="@drawable/top_background_with_stroke"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- "Administrer enheter" overskrift -->
    <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrer enheter"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.08"/>
    <!-- Logg ut knapp -->
    <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="41dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp" />

    <!-- Favoritt enheter -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/headerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

        <!-- Favoritt 1 -->
        <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/ic_endrebelysning"
                android:layout_margin="2dp"
                android:contentDescription="Belysning"/>
        <!-- Favoritt 2 -->
        <ImageView
                android:layout_width="130dp"
                android:layout_height="128dp"
                android:src="@drawable/ic_endresmarttv"
                android:layout_margin="2dp"
                android:contentDescription="Smart TV"/>
        <!-- Favoritt 3 -->
        <ImageView
                android:layout_width="124dp"
                android:layout_height="125dp"
                android:src="@drawable/ic_endrevaskemaskin"
                android:layout_margin="2dp"
                android:contentDescription="Vaskemaskin"/>
    </LinearLayout>

    <!-- "Dine enheter" tittel -->
    <TextView
            android:id="@+id/accessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dine enheter"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toBottomOf="@+id/topBackground"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Separator linje -->
    <View
            android:id="@+id/sectionSeparator2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/separator_color"
            app:layout_constraintTop_toBottomOf="@id/accessTitle"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Liste over enheter -->
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/sectionSeparator2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp">

        <!-- Enhet 1 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Phillips Hue Go"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>

        <!-- Enhet 2 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Samsung Inngangsdør"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>

        <!-- Enhet 3 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Samsung Vaskemaskin"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>

        <!-- Enhet 4 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="LG Smart TV"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_weight="1"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endre"
                    android:backgroundTint="#B3E7FD"
                    android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Søk etter enheter knapp -->
    <ImageView
            android:id="@+id/ic_soketterenheter"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/ic_soketterenheter"
            android:contentDescription="Søk etter enheter"
            app:layout_constraintTop_toBottomOf="@+id/sectionSeparator2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="232dp" app:layout_constraintHorizontal_bias="0.454"/>

</androidx.constraintlayout.widget.ConstraintLayout>